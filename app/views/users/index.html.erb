<div class="search-bar">
  <%= simple_form_for :search, url: @users_path, method: "GET" do |f| %>
    <%= f.input :name, input_html: {value: ""} %>
    <%= f.submit "Search" %>
  <% end %>
</div>

<ul class="users-list">
  <% @users.each do |user| %>
    <li>
      <%= image_tag user.profile_pic_url(:thumb) %>
      <%= link_to user.name, user %>
    </li>
  <% end %>
</ul>

